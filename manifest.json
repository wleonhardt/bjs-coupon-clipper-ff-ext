{
  "manifest_version": 2,
  "name": "BJ's Auto Coupon Clipper",
  "version": "1.2",
  "description": "Automatically clips coupons on BJ's website.",
  "permissions": [
    "tabs",
    "storage",
    "https://www.bjs.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bjs.com/myCoupons*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bjscoupons@example.com",
      "strict_min_version": "102.0",
      "data_collection_permissions": {
        "collects": [],
        "required": [
          "none"
        ]
      }
    }
  }
}